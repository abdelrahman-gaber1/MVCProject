@model Department
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Department</h1>
<br />
<br />
@*  edit delete create one method to show form and one for send data to db *@
<form asp-action="Edit">
    @* to log error in model summary for all validation or model only to display error form db*@
    <div asp-validation-summary="All"></div>
    <div>
        <label class="col-form-label" asp-for="Code"></label>
        <input type="text" asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div>
        <label class="col-form-label" asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input asp-for="DateOfCreation" class="form-control" />
    </div>
    <input type="submit" value="Svae" class="btn btn-primary mt-5" />
    <a asp-action="Index" class="btn btn-light mt-5">Back To List</a>

</form>
