@model IEnumerable<Department>;
@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>
<br />
<br />
@* asp-controller : tag helper to detect controller *@
@* asp-action     : tag helper to detect action *@
@* when i click this bottom he will route me to controller department and action create *@
<a asp-controller="Department" asp-action="Create" class="btn btn-primary">Create New Department</a>
@* if i have departments i will build table other i will not do that  *@
@* Model contain data come form view that we will render *@
@if(Model.Count()>0){
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                @* if you write table head manual you can write any thing *@
                @* so we use @Html.DisplayNameFor to take name(property) of column in db *@
                <th>@Html.DisplayNameFor(D=>D.Code)</th>
                <th>@Html.DisplayNameFor(D=>D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.DateOfCreation)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var department in Model)
            {
                <tr>
                <td>@department.Code</td>
                <td>@department.Name</td>
                <td>@department.DateOfCreation</td>
                    <partial name="_ButtonsPartial" model="@department.Id"></partial>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is no Department</h3>
    </div>
}