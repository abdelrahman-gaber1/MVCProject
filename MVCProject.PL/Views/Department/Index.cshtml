@model IEnumerable<Department>;
@{
    ViewData["Title"] = "Index";
}

<h1>All Depatments</h1>
<br />
<br />
@* asp-controller : tag helper to detect controller *@
@* asp-action     : tag helper to detect action *@
@* when i click this buttom he will route me to controller depatment and action create *@
<a asp-controller="Depatment" asp-action="Create" class="btn btn-primary">Create New Depatment</a>
@* if i have depatments i will build table other i willn't do that  *@
@* Model contain data come form view that we will render *@
@if(Model.Count()>0){
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                @* if you write table head manuall you can write any thing *@
                @* so we use @Html.DisplayNameFor to take name(property) of column in db *@
                <th>@Html.DisplayNameFor(D=>D.Code)</th>
                <th>@Html.DisplayNameFor(D=>D.Name)</th>
                <th>@Html.DisplayNameFor(D=>D.DateOfCertion)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var department in Model)
            {
                <tr>
                <td>@department.Code</td>
                <td>@department.Name</td>
                <td>@department.DateOfCertion</td>
                <td>
                    @* when you click this bottom you must send the id that will open the requsted department that you will update or delete or details *@
                    @* asp-route-id: tag helper to send paramate id *@
                    @* we write route of what property we went to select  *@
                    @* he will return department that you will send your id *@
                    @* if action in the same controller we can remove it  *@
                        <a  asp-controller="Depatment"  asp-action="Details" asp-route-id="@department.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i> @* to show aswame *@
                            Details</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@department.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i>Update
                    </a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i>Delete
                        </a>
                </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is no Department</h3>
    </div>
}